# ============================================================
# StandX Maker Points Bot - Configuration
# ============================================================

# ------------------------------------------------------------
# RUNTIME CONFIGURATION
# ------------------------------------------------------------
# Set to true when using PM2 with Bun runtime
USE_BUN=true

# ------------------------------------------------------------
# ACCOUNT CONFIGURATION
# ------------------------------------------------------------
# Choose ONE of the following formats:

# Format 1: Single Account (Legacy - backward compatible)
# ------------------------------------------------------------
STANDX_WALLET_PRIVATE_KEY=your_private_key_here
STANDX_WALLET_ADDRESS=your_wallet_address_here
STANDX_CHAIN=bsc
ACCOUNT_NAME=Account-1

# Format 2: Multiple Accounts (Numbered)
# ------------------------------------------------------------
# ACCOUNT_1_NAME=Account1
# ACCOUNT_1_PRIVATE_KEY=your_private_key_for_account_1
# ACCOUNT_1_ADDRESS=your_wallet_address_for_account_1
# ACCOUNT_1_CHAIN=bsc
#
# ACCOUNT_2_NAME=Account2
# ACCOUNT_2_PRIVATE_KEY=your_private_key_for_account_2
# ACCOUNT_2_ADDRESS=your_wallet_address_for_account_2
# ACCOUNT_2_CHAIN=bsc
#
# Add more accounts as needed (ACCOUNT_3_*, ACCOUNT_4_*, etc.)

# Format 3: Multiple Accounts (JSON)
# ------------------------------------------------------------
# ACCOUNTS=[{"name":"Account1","privateKey":"key1","address":"0x...","chain":"bsc"},{"name":"Account2","privateKey":"key2","address":"0x...","chain":"bsc"}]

# ------------------------------------------------------------
# TRADING PARAMETERS
# ------------------------------------------------------------
TRADING_SYMBOL=BTC-USD
TRADING_MODE=sell
TRADING_ORDER_SIZE_BTC=0.0001
TRADING_ORDER_DISTANCE_BP=10
TRADING_MIN_DISTANCE_BP=5
TRADING_MAX_DISTANCE_BP=15

# ------------------------------------------------------------
# TELEGRAM NOTIFICATION (Optional)
# ------------------------------------------------------------
TELEGRAM_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
TELEGRAM_ENABLED=false

# ------------------------------------------------------------
# LOGGING
# ------------------------------------------------------------
LOG_LEVEL=info
LOG_TO_FILE=false
LOG_TO_CONSOLE=true
